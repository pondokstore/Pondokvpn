# FUNCTION DEFINITIONS

function fun_bar() {
    CMD[0]="$1"
    CMD[1]="$2"
    (
        [[ -e $HOME/fim ]] && rm $HOME/fim
        ${CMD[0]} -y >/dev/null 2>&1
        ${CMD[1]} -y >/dev/null 2>&1
        touch $HOME/fim
    ) >/dev/null 2>&1 &
    tput civis
    # Modern spinner
    spinner=("⣾" "⣽" "⣻" "⢿" "⡿" "⣟" "⣯" "⣷")
    while true; do
        for symbol in "${spinner[@]}"; do
            printf "\r ${BICyan}%s ${BIWhite}Processing...${NC}" "$symbol"
            sleep 0.1
        done
        [[ -e $HOME/fim ]] && rm $HOME/fim && break
    done
    printf "\r ${BIGreen}✓ Completed!${NC}          \n"
    tput cnorm
}

function upp(){
    clear
    cd /usr/local/
    rm -rf sbin
    rm -rf /usr/bin/enc
    mkdir /usr/local/sbin
    dateFromServer=$(curl -v --insecure --silent https://google.com/ 2>&1 | grep Date | sed -e 's/< Date: //')
    biji=`date +"%Y-%m-%d" -d "$dateFromServer"`
    red() { echo -e "\\033[32;1m${*}\\033[0m"; }
    clear
    res1() {
        wget https://raw.githubusercontent.com/pondokstore/Pondokvpn/refs/heads/main/Features/menu.zip
        wget -q -O /usr/bin/enc "https://raw.githubusercontent.com/pondokstore/Pondokvpn/refs/heads/main/enc/encrypt" ; chmod +x /usr/bin/enc
        7z e -paskykenza123 menu.zip
        unzip menu.zip
        chmod +x menu/*
        enc menu/*
        mv menu/* /usr/local/sbin
        #rm -rf menu
        rm -rf menu.zip
        rm -rf update.sh
    }
    netfilter-persistent
    clear
    echo -e "${BICyan}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e "${BIWhite}              UPDATE SCRIPT                ${NC}"
    echo -e "${BICyan}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e ""
    echo -e "${BIRed} update script service${BIWhite}"
    fun_bar 'res1'
    echo -e ""
    echo -e "${BICyan}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e ""
    echo -e "${BIGreen}Redirecting to menu in 3 seconds...${NC}"
    sleep 3
    menu
}

function edit_figlet_text(){
    clear
    echo -e "${BICyan}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e "${BIWhite}          EDIT FIGLET TEXT                ${NC}"
    echo -e "${BICyan}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo -e ""
    echo -e "Current Text: ${BIGreen}$FIGLET_TEXT${NC}"
    echo -e ""
    read -p "Enter new Text (leave blank to keep current): " new_text
    if [[ -n "$new_text" ]]; then
        # Validate input (basic check for printable characters)
        if [[ "$new_text" =~ ^[a-zA-Z0-9[:space:]]+$ ]]; then
            FIGLET_TEXT="$new_text"
            echo "$FIGLET_TEXT" > "$FIGLET_FILE"
            echo -e "${BIGreen}Text updated to: $FIGLET_TEXT${NC}"
        else
            echo -e "${BIRed}Error: Invalid input. Use alphanumeric characters and spaces only.${NC}"
        fi
    else
        echo -e "${BIYellow}Text unchanged.${NC}"
    fi
    echo -e ""
    echo -e "${BIGreen}Returning to menu in 3 seconds...${NC}"
    sleep 3
    menu
}

