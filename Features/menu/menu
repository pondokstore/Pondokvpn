echo -e "${BICyan} │${NC}  [${BIYellow}04${NC}] Trojan WS/GRPC      [${BIYellow}09${NC}] Update Script       [${BIYellow}14${NC}] Settings        ${BICyan} ${NC}"
echo -e "${BICyan} │${NC}  [${BIYellow}05${NC}] Shadowsocks         [${BIYellow}10${NC}] Zivpn Menu          [${BIYellow}15${NC}] Banner     ${BICyan} ${NC}"
echo -e "${BICyan} ╰──────────────────────────────────────────────────────────────────╯${NC}"
echo -e " "
read -p " Select Option (0-15) or x to refresh: " opt
