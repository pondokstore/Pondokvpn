echo -e "${BICyan} ├──────────────────────────────────────────────────────────────────┤${NC}"
echo -e "${BICyan} │${BIWhite} Traffic  : ${BIGreen}↓ $dtoday ${BIYellow}↑ $utoday ${BICyan}TOT: $ttoday${NC}"
echo -e "${BICyan} ╰──────────────────────────────────────────────────────────────────╯${NC}"
echo -e " ${WHITE}         SSH: $ssh1 TROJAN : $trx SS-R : $ssx VLESS : $vlx VMESS : $vmc ${NC}"
echo -e "${BICyan} ╭── ${BIWhite}Menu Options${BICyan} ──────────────────────────────────────────────────╮${NC}"
echo -e "${BICyan} │${NC}  [${BIYellow}01${NC}] SSH & OpenVPN       [${BIYellow}06${NC}] Trial Account       [${BIYellow}11${NC}] Bac/Res  ${BICyan} ${NC}"
echo -e "${BICyan} │${NC}  [${BIYellow}02${NC}] Vmess WS/GRPC       [${BIYellow}07${NC}] Reboot Server       [${BIYellow}12${NC}] Bot Panel       ${BICyan} ${NC}"
